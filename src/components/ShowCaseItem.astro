import { Icon } from 'astro-icon/components';

interface Props {
  icon?: string;
  title: string;
  type: 'left' | 'right' | 'centered' | 'fill' | 'fullwidth';
}

const { icon, title, type } = Astro.props;
---

<div
  class:list={[
    'show-case-item',
    { reverse: type === 'right' },
    { centered: type === 'centered' },
    { fill: type === 'fill' },
    { fullwidth: type === 'fullwidth' },
  ]}>
  <div class="description">
    <h2>
      {icon && <Icon name={icon} class="inline-icon" />}
      {title}
    </h2>
    <slot name="description" />
  </div>
  <div class="content">
    <slot name="content" />
  </div>
</div>

<style>
  .show-case-item {
    margin-top: 5rem !important;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .description,
  .content {
    flex: 1 1 0;
  }

  .centered {
    text-align: center;
  }

  .fullwidth {
    width: 100vw;
    position: relative;
    margin-left: -50vw;
    margin-top: 100px;
    left: 50%;
  }

  .fill .content,
  .fullwidth .content,
  .centered .content {
    display: none;
  }

  .description {
    font-size: clamp(1rem, calc(0.5rem + 1vw), 1.5rem);
  }

  @media (min-width: 50rem) {
    .show-case-item {
      margin-top: 10rem !important;
      gap: 5vw;
      flex-direction: row;
    }

    .content {
      transform: perspective(1500px) rotateY(-10deg) scale(1.05);
    }

    .show-case-item.reverse {
      flex-direction: row-reverse;

      .content {
        transform: perspective(1500px) rotateY(10deg) scale(1.05);
      }
    }
  }
</style>
